{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["standard-with-typescript"],
  "rules": {
    "import/order": ["error", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", ["index", "object"], "type"]
    }],
    "max-len": ["error", {
      "code": 80,
      "tabWidth": 2,
      "ignoreUrls": true,
      "ignoreTemplateLiterals": true
    }],
    "max-lines": ["error", {
      "max": 250,
      "skipComments": true
    }]
  }
}
